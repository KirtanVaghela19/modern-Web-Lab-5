<section class="mb-3 d-flex gap-2">
  <a class="btn btn-outline-secondary btn-sm" href="/clients">Back to Clients</a>
  <a class="btn btn-outline-dark btn-sm" href="/">Home</a>
</section>

<section class="card shadow-sm">
  <div class="card-body">
    <h2 class="h5 mb-3">Create Client</h2>

    <% if (errors && errors.length) { %>
      <div class="alert alert-danger" role="alert">
        <ul class="mb-0">
          <% errors.forEach(e => { %>
            <li><%= e %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="/clients" novalidate>
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input
          id="fullName"
          name="fullName"
          type="text"
          class="form-control"
          required
          value="<%= form?.fullName || '' %>"
          placeholder="e.g., Ava Thompson"
        />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          class="form-control"
          required
          value="<%= form?.email || '' %>"
          placeholder="e.g., ava.thompson@northstar.example"
        />
      </div>

      <div class="mb-3">
        <label for="riskCategory" class="form-label">Risk Category</label>
        <select id="riskCategory" name="riskCategory" class="form-select" required>
          <option value="Low" <%= (form?.riskCategory === 'Low') ? 'selected' : '' %>>Low</option>
          <option value="Medium" <%= (form?.riskCategory === 'Medium') ? 'selected' : '' %>>Medium</option>
          <option value="High" <%= (form?.riskCategory === 'High') ? 'selected' : '' %>>High</option>
        </select>
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-outline-secondary" href="/clients">Cancel</a>
      </div>

      <div class="mt-3 small text-muted">
        Note: Client ID and Created Date are generated automatically.
      </div>
    </form>
  </div>
</section>
